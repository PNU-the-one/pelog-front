{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "lib": ["es2018", "dom", "dom.iterable"],
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src/",
    "paths": {
      "*": ["_packages/*", "*"]
    },
    "typeRoots": ["src/type"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
